<div id="<%= "cat_#{cat.id}" %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= cat.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Breed:</strong>
    <%= cat.breed %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Favorite quote:</strong>
    <%= cat.favorite_quote %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this cat", cat_path(cat.id), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this cat', edit_cat_path(cat.id), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
