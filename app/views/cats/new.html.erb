<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New cat</h1>

  <%= turbo_frame_tag 'cat-errors'  %>

  <%= render(
    partial: 'form',
    locals: {
      cat: cat,
      url: cats_path,
      method: :post
    }
  ) %>

  <%= link_to 'Back to cats', cats_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
