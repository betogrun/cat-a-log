<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing cat</h1>

  <%= render(partial: 'cats/form/errors', locals: { errors: errors }) %>

  <%= render(
    partial: 'form',
    locals: {
      cat: cat,
      url: cat_path(cat.id),
      method: :put
    }
  ) %>

  <%= link_to "Show this cat", cat_path(cat.id), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to cats", cats_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
